      "version": "initial",
      "imageUrl": "",
      "docURL": "...",
      "primary": {
        "header_title": {
          "type": "StructuredText",
          "config": {
            "single": "heading2",
            "label": "Section Title"
          }
        },
        "header_description": {
          "type": "StructuredText",
          "config": {
            "multi": "paragraph,strong",
            "label": "Section Description"
          }
        },
        "header_cta": {
