              "subtitle": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph,strong",
                  "label": "Card Subtitle"
                }
              },
              "description": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,strong,em",
                  "label": "Card Description"
                }
              },
              "card_cta": {
                "type": "Link",
                "config": {
                  "label": "Card Call To Action",
                  "allowText": true,
                  "repeat": false,
                  "select": null
